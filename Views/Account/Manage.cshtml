@model TaskManager.Models.User
@{
    ViewData["Title"] = "Manage Account";
}

<h2 class="text-center text-secondary">Manage Account</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-action="Manage" method="post" class="card p-3">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Name">Enter Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3" >
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control bg-secondary text-white" readonly />
        <small class="text-muted">Email cannot be changed.</small>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PasswordHash">New Password</label>
        <input asp-for="PasswordHash" class="form-control" type="password" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>

    <center>
    <button type="submit" class="btn btn-secondary" href="/Dashboard">
    Save Changes
    </button>
    <a href="/Dashboard" class="btn btn-danger" style="width:100px;">Back</a>
    </center>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
