@model TaskManager.Models.User

@{
    ViewData["Title"] = "Delete User";
}
<h2 class="text-center">Delete User</h2>
<div class="d-flex justify-content-center mt-3">

<form class="form form-center" method="post" action="/Admin/DeleteUser/@Model.Id">

    <input type="hidden" name="id" value="@Model.Id" />

    <p>Are you sure you want to delete user <strong>@Model.Name</strong>?</p>
    <div class="d-flex justify-content-center">
    <button class="btn btn-danger me-3">Yes! Delete User</button>

    <a class="btn btn-secondary" href="/Admin/Users">Cancel</a>
    </div>

</form>
</div>
