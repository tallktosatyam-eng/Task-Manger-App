@model List<TaskManager.Models.TaskItem>

@{
    ViewData["Title"] = "Completed Tasks";
}

<h2 class="text-center text-secondary mb-4">
    <i class="bi bi-check-circle-fill me-2"></i> Completed Tasks
</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>No.</th>
                <th>Task Name</th>
                <th>Assigned To</th>
                <th>Project</th>
                <th>Description</th>
                <th>Completed On</th>
                
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var task = Model[i];
                <tr>
                    <th>@(i + 1)</th>
                    <td>@task.Title</td>
                    <td>@(task.AssignedTo?.Email?? "N/A")</td>
                    <td>@(task.Project?.Name ?? "N/A")</td>
                    <td>@task.Description</td>
                    <td>
                        @(task.Deadline.HasValue
                            ? task.Deadline.Value.ToLocalTime().ToString("dd MMM yyyy")
                            : "N/A")
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info text-center">
        No completed tasks found.
    </div>
}
