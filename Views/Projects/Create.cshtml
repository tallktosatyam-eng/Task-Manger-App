@model TaskManager.Models.Project
@{
    ViewData["Title"] = "Create Project";
}
<h2 class="text-center text-secondary">
<i class="bi bi-folder"></i>
Create Project
</h2>
<form method="post" class="card p-3">
    <div class="mb-3">
        <label class="form-label text-secondary fw-semibold small">
            Project Name
        </label>
        <input asp-for="Name" class="form-control" required/>
    </div>

    <div class="mb-3">  
        <label class="form-label text-secondary fw-semibold small">
            Description
        </label>
        <textarea asp-for="Description" class="form-control" required>
        </textarea>
    </div>

    <div class="mb-3">
        <label class="form-label text-secondary fw-semibold small">
            Start Date
        </label>
        <input asp-for="StartDate" type="date" class="form-control" required value="@DateTime.Now.ToString("yyyy-MM-dd")" />
    </div>

    <div class="mb-3">
        <label class="form-label text-secondary fw-semibold small">
            End Date
        </label>
        <input asp-for="EndDate" type="date" class="form-control" required value="@DateTime.Now.AddDays(30).ToString("yyyyy-MM-dd")"/>
    </div>
    <center>
    <button class="btn btn-secondary "style="width:100px">Create</button>
    <a href="/Projects" class="btn btn-danger ms-2" style="width:100px">Cancel</a>
    </center>
</form>
