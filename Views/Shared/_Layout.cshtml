<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - TaskManager</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="~/favicon.png" sizes="32x32" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.5/css/dataTables.dataTables.css" />
</head>

<body>
    @* <nav class="navbar navbar-expand-lg shadow-sm stylish-nav">*@

    <nav class="navbar navbar-expand-lg shadow-sm stylish-nav">
        <div class="container">
            <a class="navbar-brand text-light fw-bold d-flex align-items-center" href="/">
                <i class="bi bi-check2-square me-2"></i> TaskManager
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <!-- LEFT NAVIGATION -->
                <ul class="navbar-nav me-auto">

                    <!-- COMMON TO ALL USERS -->
                    <li class="nav-item">
                        <a class="nav-link nav-item-custom" href="/Dashboard">
                            <i class="bi bi-speedometer2 me-1"></i> Dashboard
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link nav-item-custom" href="/Projects">
                            <i class="bi bi-folder2-open me-1"></i> Projects
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link nav-item-custom" href="/Tasks">
                            <i class="bi bi-list-check me-1"></i> Tasks
                        </a>
                    </li>

                    <!-- NOTIFICATIONS FOR TEAM MEMBERS ONLY -->
                    @if (!User.IsInRole("Admin") && !User.IsInRole("Manager"))
                    {
                        <li class="nav-item">
                            <a class="nav-link nav-item-custom d-flex align-items-center" href="/Notifications">
                                <i class="bi bi-bell me-1"></i> Notifications
                                @await Component.InvokeAsync("NotificationCount")
                            </a>
                        </li>
                    }


                    <!-- ADMIN MENU -->
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link nav-item-custom" href="/Admin/Users">
                                <i class="bi bi-person-gear me-1"></i> Manage Users
                            </a>
                        </li>
                    }

                    <!-- MANAGER MENU -->
                    @if (User.IsInRole("Manager"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle nav-item-custom" href="#" id="managerMenu" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-graph-up-arrow me-1"></i> Manager
                            </a>

                            <ul class="dropdown-menu shadow" aria-labelledby="managerMenu">

                                <li>
                                    <a class="dropdown-item" href="/Manager/Dashboard">
                                        <i class="bi bi-speedometer2 me-1"></i> Manager Dashboard
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" href="/Manager/UserPerformance">
                                        <i class="bi bi-people-fill me-1"></i> User Performance
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" href="/Manager/MonthlyReport">
                                        <i class="bi bi-calendar3 me-1"></i> Monthly Report
                                    </a>
                                </li>

                            </ul>
                        </li>
                    }

                </ul>

                <!-- RIGHT NAVIGATION -->
                <ul class="navbar-nav">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item profile-menu">
                            <span class="nav-link nav-item-custom">
                                <i class="bi bi-person-circle me-1"></i> Hello, @User.Identity.Name
                            </span>

                            <div class="profile-dropdown rounded rounded-pill">
                                <a class="text-center text-light" href="/Account/Manage">Manage Account</a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-item-custom" href="/Account/Logout">
                                <i class="bi bi-box-arrow-right me-1"></i> Logout
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link nav-item-custom" href="/Account/Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Login
                            </a>
                        </li>
                    }

                </ul>

            </div>

        </div>

    </nav>

    <!-- BODY -->
    <div class="container mt-3">
        @RenderBody()
    </div>

    <!-- FOOTER -->
   <footer class="footer stylish-footer text-center text-light">
    <div class="container">
            © @DateTime.Now.Year TaskManager. All Rights Reserved. Built for productivity & task scheduling.
    </div>
</footer>



    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/2.3.5/js/dataTables.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


    <!-- STYLES -->
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .container {
    flex: 1;
}

        .stylish-footer{
            background: linear-gradient(to left, #f12711, #f5af19);
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            padding: 4px 0;
            font-size:11px;
            line-height:1.2;
        }
        .stylish-nav {
            background: linear-gradient(to right, #f12711, #f5af19);
            border-bottom-left-radius: 10px;
            border-bottom-right-radius: 10px;
        }

        .nav-item-custom {
            color: white !important;
            font-weight: 500;
            border-radius: 7px;
            padding: 6px 12px;
            transition: 0.3s;
            margin-right: 4px;
        }

        .nav-item-custom:hover {
            background: rgba(255, 255, 255, 0.25);
            transform: scale(1.06);
            color: #fff !important;
        }

        /* Profile dropdown menu */
        .profile-menu {
            position: relative;
        }

        .profile-dropdown {
            position: absolute;
            @* background-color: #0077c0; *@
            background: linear-gradient(90deg, #ff5e62, #ff9966);
            border-radius: 0 0 8px 8px;
            padding: 8px 10px;
            top: 42px;
            right: 0;
            display: none;
            min-width: 165px;
            z-index: 999;
            white-space: normal;
            text-wrap: wrap;
            box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.15);
        }

        .profile-dropdown a {
            display: block;
            padding: 6px;
            color: white;
            font-weight: 600;
            font-size: 14px;
        }

        .profile-dropdown a:hover {
            background-color: rgba(255, 255, 255, 0.25);
            border-radius: 4px;
        }

        .profile-menu:hover .profile-dropdown {
            display: block;
        }
    </style>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>