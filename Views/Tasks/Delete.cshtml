@model TaskManager.Models.TaskItem

@{
    ViewData["Title"] = "Delete Task";
}

<h2 class="text-center text-danger mb-4">
    <i class="bi bi-trash3 me-2"></i> Delete Task
</h2>

<div class="alert alert-warning text-center" role="alert">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    Are you sure you want to delete this task? This action cannot be undone.
</div>

<div class="card shadow mx-auto" style="max-width: 450px;">
    <div class="card-body">

        <h5 class="text-danger text-center mb-3">
            Delete Task?
        </h5>

        <table class="table table-bordered">
            <tr>
                <th>Project</th>
                <td>@Model.Project?.Name</td>
            </tr>
            <tr>
                <th>Assigned To</th>
                <td>@Model.AssignedTo?.Name</td>
            </tr>
            <tr>
                <th>Due Date</th>
                <td>@Model.Deadline?.ToShortDateString()</td>
            </tr>
            <tr>
                <th>Progress</th>
                <td>@Model.Progress %</td>
            </tr>
        </table>

        <form asp-action="DeleteConfirmed" method="post" class="text-center mt-3">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash3-fill me-1"></i>
                Confirm Delete
            </button>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle me-1"></i>
                Cancel
            </a>
        </form>

    </div>
</div>
